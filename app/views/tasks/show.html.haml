%h1= @task.title
%p
  Due date: #{@task.due_date}
%p= @task.created_at.strftime("%Y-%b-%d")
%br
  = link_to "Edit", edit_task_path(@task), class: "btn btn-primary"
  %br
    = button_to "Delete", @task, method: :delete, class: "btn btn-danger Delete", data: {confirm: "Are you sure? It's gone for good!"}
    %br
      = link_to "All Projects", projects_path, class: "btn btn-primary"
    %br
      = link_to "All Tasks", tasks_path, class: "btn btn-primary"

      %br/