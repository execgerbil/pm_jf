<h1>All Tasks</h1>

 <%= link_to "Create New Task", new_task_path %>

 <% @tasks.each do |task| %>
    <h2><%= link_to task.title, task_path(task.id) %></h2>
      <p> Due Date: <%= task.due_date %></p>
      <p> Created On: <%= task.created_at.strftime("%Y-%b-%d") %>
      </p>
      <hr>
      <% end %>
