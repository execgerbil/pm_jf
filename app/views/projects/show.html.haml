%h1= @project.title
%p= @project.description
%p= @project.created_at.strftime("%Y-%b-%d")
%br
  = link_to "Edit", edit_project_path(@project), class: "btn btn-primary"
  %br
    = button_to "Delete", @project, method: :delete, class: "btn btn-danger Delete", data: {confirm: "Are you sure? It's gone for good!"}
    %br
      = link_to "All Projects", projects_path, class: "btn btn-primary"
      %br
        = link_to "Home", home_path, class: "btn btn-primary"
        %br